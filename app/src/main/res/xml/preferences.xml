<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <ListPreference
        android:defaultValue="@string/pref_most_popular"
        android:entries="@array/pref_sort_order"
        android:entryValues="@array/pref_sort_order"
        android:key="@string/pref_favorite_key"
        android:title="@string/pref_sort_order_label"
        />


    <!--ListPreference - Insted of a single value are an array of values
        android:entries="<Array with all the option labels>"
    android:entryValues="<Array with all the values>"
        android:title="<Label for the entire preference>"

    -->
    The entries are the lables that we will actualy see, e.g: red, blue, green to check from radio
    button -->
</PreferenceScreen>